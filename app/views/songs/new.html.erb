<h1>Create a Song</h1>

<%= form_for @song do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :artist_name, "Artist's Name" %>
    <%= f.text_field :artist_name %>
  </p>

  <p>
    <%= f.label :genre_id, "Select Genre" %>
    <%= f.collection_select :genre_id, Genre.all, "id", "name" %>
  </p>

<h2>Notes for Song</h2>

  <%= f.fields_for :notes do |ff| %>
    <%= ff.text_area :content %>
    <br/>
  <% end %>

<br />
  <%= f.submit %>
<% end %>


